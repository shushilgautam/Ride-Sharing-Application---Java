<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->



    <style name="Theme.RideSharing" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyCustomToolbar</item>
        <item name="alertDialogStyle">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="fontFamily">@font/roboto_regular</item>

<!--        <item name="actionModeBackground">@color/contextualActionBarColor</item>-->
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
<!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
        <item name="popupMenuBackground">@color/primaryColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->


<!--        my style-->

    </style>
    <style name="MyCustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>


    </style>
    <style name="MyCustomNavigationView" parent="Widget.Material3.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App</item>
        <item name="navigationViewStyle">@style/ThemeOverlay.Material3.NavigationView</item>
    </style>
    <style name="ThemeOverlay.App" parent="">
        <item name="colorSurface">@color/primaryColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/green_button</item>
        <item name="colorOnSurface">@color/blue_button</item>
        <item name="colorSurfaceContainerHigh">@color/blue_button</item>

        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>