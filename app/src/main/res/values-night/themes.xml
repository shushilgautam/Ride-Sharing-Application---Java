<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.RideSharing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#9EFFFFFF</item>
        <item name="colorContainer">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/grey</item>
        <!--        <item name="colorSurfaceContainerLow">@color/white</item>-->

        <item name="colorOnTertiaryFixedVariant">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

    </style>

    <color name="grey">#F3141414</color>
</resources>