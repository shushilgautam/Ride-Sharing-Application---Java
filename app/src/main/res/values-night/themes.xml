<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.RideSharing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyCustomToolbar</item>
        <item name="windowActionModeOverlay">true</item>
        <!--        <item name="actionModeBackground">@color/contextualActionBarColor</item>-->
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->
        <item name="popupMenuBackground">@color/primaryColor</item>
        <!--        <item name="fontFamily">@font/roboto_regular</item>-->


    </style>

    <style name="MyCustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>


    </style>

    <style name="ThemeOverlay.App" parent="">
        <item name="colorSurface">@color/green_main</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.RideSharing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
</resources>