<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/uppersheet_dialog"
    android:padding="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/mode_changer"
        android:layout_margin="10dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView

                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="bike"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="car"
                android:padding="10dp"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_below="@id/mode_changer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:hint="Current Location"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_textview"
            android:drawableStart="@drawable/my_location"
            android:drawablePadding="10dp"

            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:hint="Final Destination"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_textview"
            android:drawableStart="@drawable/final_location"
            android:drawablePadding="10dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Date"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/custom_textview"
            android:drawableStart="@drawable/calender"
            android:drawablePadding="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:hint="Time"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableStart="@drawable/time"
            android:background="@drawable/custom_textview"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="10dp"
        android:layout_below="@id/topRow"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:padding="10dp"
        android:paddingStart="20dp"
        app:cornerRadius="20dp"
        android:drawableEnd="@drawable/arrow"
        android:text="Find"
        app:backgroundTint="@color/green"/>
</RelativeLayout>